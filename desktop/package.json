{
  "name": "codelin",
  "version": "1.0.0",
  "description": "Electron-Template with Vue and TypeScript",
  "main": "./out/main/index.js",
  "author": "codelin.org",
  "homepage": "https://codelin.org",
  "build": {
    "afterPack": "./scripts/removeLocales.js",
    "artifactName": "CodeLin-${os}-${arch}-${version}.${ext}",
    "win": {
      "requestedExecutionLevel": "requireAdministrator",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    },
    "extraResources": [
      {
        "from": "node_modules/@ffmpeg/core/dist/ffmpeg-core.js",
        "to": "resources/ffmpeg"
      },
      {
        "from": "./vlc-3.0.9.2",
        "to": "vlc-3.0.9.2",
        "filter": [
          "**/*",
          "!locale/**",
          "!skins/**",
          "!lua/**",
          "!msi/**",
          "!**/*.txt",
          "!**/*.TXT",
          "!**/*.html",
          "!**/*.md",
          "!*.exe",
          "!**/*.ico",
          "!languages/**"
        ]
      },
      {
        "from": "./bin",
        "to": "bin"
      }
    ],
    "files": [
      "**/*",
      "!bin/**/*",
      "!build/**/*",
      "!vlc-3.0.9.2/**/*",
      "!path_to_some_media_file.mp4"
    ]
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": " electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:all": "npm run build:linux && npm run build:win",
    "rebuild:robotjs": "electron-rebuild -f -w @node-robotics/robotjs"
  },
  "dependencies": {
    "@arco-design/web-vue": "^2.56.3",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "axios": "1.8.2",
    "electron-log": "^5.3.0",
    "electron-store": "8.2.0",
    "electron-updater": "^6.3.9",
    "pinia": "^3.0.1",
    "sqlite3": "^5.1.7",
    "systeminformation": "^5.25.11",
    "vite-plugin-svg-icons": "^2.0.1",
    "vue-hooks-plus": "^2.2.3",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/node": "^22.13.4",
    "@types/three": "^0.174.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.0.0",
    "eslint": "^9.20.1",
    "eslint-plugin-vue": "^9.32.0",
    "prettier": "^3.5.1",
    "sass": "^1.85.0",
    "scss": "^0.2.4",
    "typescript": "^5.7.3",
    "vite": "6.3.4",
    "vue": "^3.5.13",
    "vue-tsc": "^2.2.2"
  }
}
